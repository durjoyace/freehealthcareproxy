generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Issue {
  id            String   @id @default(uuid())
  sessionId     String
  issueType     String   // denial, bill, prior_auth, records, claim_pending
  description   String
  insurerName   String?
  providerName  String?
  amountInvolved Float?
  dateOfService String?
  hasDocuments  Boolean  @default(false)
  documentPaths String?  // JSON array of paths (legacy)

  resolution    Resolution?
  documents     Document[]
  conversation  Conversation?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Resolution {
  id                    String   @id @default(uuid())
  issueId               String   @unique
  issue                 Issue    @relation(fields: [issueId], references: [id])

  // The Resolution Map fields
  whatIsHappening       String   // Plain English explanation
  whoIsResponsible      String   // JSON: { parties: [...], primaryContact: string }
  likelihoodOfSuccess   String   // high, medium, low
  likelihoodReason      String
  nextSteps             String   // JSON array of steps
  documentsNeeded       String   // JSON array of document names
  estimatedTimeframe    String   // e.g., "2-4 weeks"
  warnings              String?  // JSON array of things to watch out for

  createdAt             DateTime @default(now())
}

model Document {
  id            String   @id @default(uuid())
  issueId       String
  issue         Issue    @relation(fields: [issueId], references: [id])

  filename      String   // Stored filename (UUID-based)
  originalName  String   // Original filename from user
  mimeType      String   // e.g., "application/pdf", "image/jpeg"
  size          Int      // File size in bytes
  storagePath   String   // Full path to stored file

  // Claude analysis results
  documentType  String?  // "eob", "denial_letter", "bill", "insurance_card", "other"
  extractedText String?  // Raw text extraction (if applicable)
  analysis      String?  // JSON: Claude's structured analysis

  createdAt     DateTime @default(now())
}

model Conversation {
  id        String    @id @default(uuid())
  issueId   String    @unique
  issue     Issue     @relation(fields: [issueId], references: [id])

  messages  Message[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Message {
  id             String       @id @default(uuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id])

  role           String       // "user" | "assistant"
  content        String       // Message text
  metadata       String?      // JSON: additional data (tool calls, etc.)

  createdAt      DateTime     @default(now())
}

model LeadCapture {
  id            String   @id @default(uuid())
  issueId       String
  email         String
  phone         String?
  preferredContact String @default("email")
  notes         String?

  createdAt     DateTime @default(now())
}
